DELETE FROM booktable WHERE publication_date < '1990-01-01';
UPDATE booktable
	SET publication_date = CURDATE() WHERE publication_date IS NULL;
UPDATE booktable
	SET isnew = 1 WHERE publication_date > '2005-01-01';
